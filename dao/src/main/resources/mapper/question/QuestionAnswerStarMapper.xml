<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.itellyou.dao.question.QuestionAnswerStarDao">
    <sql id="columns">
        ${alias}answer_id ${prefix}answer_id,
        ${alias}created_time ${prefix}created_time,
        ${alias}created_ip ${prefix}created_ip,
        ${alias}created_user_id ${prefix}created_user_id
    </sql>
    <insert id="insert">
        insert into question_answer_star (answer_id,created_time,created_ip,created_user_id) values (#{answerId},#{createdTime},#{createdIp},#{createdUserId})
    </insert>
    <delete id="delete">
        delete from question_answer_star where answer_id=#{answerId} and created_user_id=#{userId}
    </delete>
    <resultMap id="searchMap" type="QuestionAnswerStarDetailModel" autoMapping="true">
        <association property="answer"  notNullColumn="id" javaType="QuestionAnswerDetailModel" columnPrefix="q_" autoMapping="true">
            <id property="id" column="id" />
            <association property="question" javaType="QuestionDetailModel" columnPrefix="d_" autoMapping="true">
                <id property="id" column="id" />
            </association>
            <association property="author"  notNullColumn="id" javaType="UserDetailModel" columnPrefix="y_" autoMapping="true">
                <id property="id" column="id" />
            </association>
        </association>
        <association property="user"  notNullColumn="id" javaType="UserDetailModel" columnPrefix="u_" autoMapping="true">
            <id property="id" column="id" />
        </association>
    </resultMap>
    <sql id="where">
        <where>
            <if test="beginTime != null">
                and ${alias}created_time <![CDATA[>=]]> #{beginTime}
            </if>
            <if test="endTime != null">
                and ${alias}created_time <![CDATA[<=]]> #{endTime}
            </if>
            <if test="ip != null">
                and ${alias}created_ip = #{ip}
            </if>
            <if test="answerId != null">
                and ${alias}answer_id = #{answerId}
            </if>
            <if test="userId != null">
                and ${alias}created_user_id = #{userId}
            </if>
        </where>
    </sql>
    <select id="search" resultMap="searchMap">
        select
        <include refid="columns">
            <property name="alias" value="s."/>
            <property name="prefix" value=""/>
        </include>,
        <include refid="com.itellyou.dao.question.QuestionAnswerDao.columns">
            <property name="alias" value="q."/>
            <property name="prefix" value="q_"/>
        </include>,1 q_use_star,
        i.id q_d_id,w.title q_d_title,w.description q_d_description,v.description q_description,
        <include refid="com.itellyou.dao.user.UserInfoDao.columns">
            <property name="alias" value="u."/>
            <property name="prefix" value="u_"/>
        </include>,
        <include refid="com.itellyou.dao.user.UserInfoDao.columns">
            <property name="alias" value="y."/>
            <property name="prefix" value="q_y_"/>
        </include>
        from question_answer_star s
        inner join question_answer q on q.id = s.answer_id
        inner join question_answer_version v on v.answer_id = q.id and v.version = q.version
        left join question_info i on q.question_id=i.id
        left join question_version w on i.id = w.question_id and i.version = w.version
        left join user_info y on y.id = q.created_user_id
        left join user_info u on u.id = s.created_user_id
        <include refid="where">
            <property name="alias" value="s."/>
        </include>
        <if test="order != null">
            <foreach collection="order" index="key" item="value" open="order by " separator=",">
                <choose>
                    <when test="key.indexOf('.') >= 0">${key} ${value}</when>
                    <otherwise>s.${key} ${value}</otherwise>
                </choose>
            </foreach>
        </if>
        <if test="limit != null and offset != null">
            limit #{offset},#{limit}
        </if>
    </select>
    <select id="count" resultType="Integer">
        select count(*)
        from question_answer_star s
        inner join question_answer q on q.id = s.answer_id
        <include refid="where">
            <property name="alias" value="s."/>
        </include>
    </select>
</mapper>